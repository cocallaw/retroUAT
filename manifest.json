{
  "manifest_version": 3,
  "name": "retroUAT",
  "version": "2.1.0",
  "description": "Automatically redirect UAT Tracker and Feedback360 links to Azure DevOps work items.",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": [
    "https://uatracker.microsoft.com/*",
    "https://feedback360.microsoft.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/retroUAT_128.png"
    }
  },
  "icons": {
    "128": "icons/retroUAT_128.png"
  },
  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Ctrl+Shift+U"
      },
      "description": "Toggle RetroUAT Redirects"
    }
  }
}